{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://babylonrpg.com/schemas/entities/class.schema.json",
  "title": "SocialClass",
  "description": "A social class in the simulation",

  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "attributes": {
      "type": "object",
      "additionalProperties": true
    },
    "relationships": {
      "type": "array",
      "items": { "$ref": "../core/common.schema.json#/$defs/Relationship" }
    }
  },
  "required": ["id", "name"],
  "additionalProperties": true
}
