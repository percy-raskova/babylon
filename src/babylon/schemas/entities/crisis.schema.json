{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://babylonrpg.com/schemas/entities/crisis.schema.json",
  "title": "Crisis",
  "description": "A crisis event in the simulation",

  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "participants": {
      "type": "array",
      "items": { "type": "string" }
    },
    "triggers": {
      "type": "array",
      "items": { "type": "string" }
    },
    "contradictions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "resolutions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "effects": {
      "type": "array",
      "items": { "$ref": "../core/common.schema.json#/$defs/Effect" }
    }
  },
  "required": ["id", "name"],
  "additionalProperties": true
}
